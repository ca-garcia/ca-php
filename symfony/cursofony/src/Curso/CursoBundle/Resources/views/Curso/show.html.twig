{% extends 'CursoBundle:Admin:admin_layout.html.twig' %}

{% block title %}Datos del Curso!{% endblock %}

{% block body -%}
<div class="container pos-top">
    <div class="page-header">
        <h1>Datos del Curso<small> Administraci&oacute;n</small></h1>
    </div>

    <table class="table table-hover">
        <tbody>
            <tr>
                <th>ID:</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Nombre:</th>
                <td>{{ entity.nombre }}</td>
            </tr>
            <tr>
                <th>Descripci&oacute;n:</th>
                <td>{{ entity.descripcion }}</td>
            </tr>
            <tr>
                <th>Fecha inicio:</th>
                <td>{{ entity.fechai|date('Y-m-d') }}</td>
            </tr>
            <tr>
                <th>Fecha fin:</th>
                <td>{{ entity.fechaf|date('Y-m-d') }}</td>
            </tr>
            <tr>
                <th>Hora:</th>
                <td>{{ entity.hora |date('H:i')}}</td>
            </tr>
            <tr>
                <th>Direcci&oacute;n:</th>
                <td>{{ entity.direccion }}</td>
            </tr>
            <tr>
                <th>Profesor:</th>
                {% if entity.profesor is not empty %}
                <td>{{ entity.profesor.nombre }} {{ entity.profesor.apellidos }}</td>
                {% else %}
                    <td><b><em>Sin profesor.</em></b></td>
                {% endif %}
            </tr>
            <tr>
                <th>Acciones:</th>
                <td>
                    <a class="btn-sm btn-warning" href="{{ path('curso_edit', { 'id': entity.id }) }}">Editar</a>
                    <a class="btn-sm btn-info" href="{{ path('curso') }}">Regresar a la lista</a>
                    <div style="display: inline-block">{{ form(delete_form) }}</div>
                </td>
            </tr>
        </tbody>
    </table>

